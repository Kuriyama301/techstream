# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Node Environment
NODE_ENV=development

# Database - MongoDB
MONGODB_URI=mongodb://mongodb:27017/techstream

# Database - PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=techstream
